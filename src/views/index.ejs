                            <img src="../../img/product-1629735114885.jpg" alt="" class="img-categ"><p><%= categorias[i].nombre %> </p>
                        </a>  
                    </div>
                </div>
            <% } %>
            <% if (categorias[i].id === 3) { %>
                <div class="categorias">
                    <div class="categ-index">
                        <a href='./categories/<%= categorias[i].id %> '>
                            <img src="../../img/product-1629735224468.jpg" alt="" class="img-categ"><p><%= categorias[i].nombre %></p>
                        </a>  
                    </div>
                </div>
            <% } %>
            <% if (categorias[i].id === 4) { %>
                <div class="categorias">
                    <div class="categ-index">
                        <a href='./categories/<%= categorias[i].id %> '>
                            <img src="../../img/product-1629735385347.jpg" alt="" class="img-categ"><p><%= categorias[i].nombre %></p>
                        </a>  
                    </div>
                </div>
            <% } %>

        <% } %>

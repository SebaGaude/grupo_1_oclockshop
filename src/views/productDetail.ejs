<!DOCTYPE html>
<html lang="en"> 

<%- include("partials/head") %>

<body>

    <%- include("partials/header") %>

    <main class="principal">

        <div class="imagen-principal">
            <img src="../../img/<%= product.imagen %> " alt="imagen elegida">
        </div>
        <div class=descripcion>
            <h3><%= product.articulo %> </h3>  
            <p class="main-characteristics"> <%= product.descripcion %> </p>
            <div class="precios">
                <!-- <p class="precio-original">$<%= product.precio %> </p> -->
                <div class="descuento">
                    <p class="precio-descuento">$<%= product.precio%></p> 
                    <!-- <p class="discount"><%= product.descuento %> % OFF </p> -->
                </div>    
            </div>
            <% if (locals.isLogged) { %>
                <form action="/products/detail/<%= product.id %>" method="POST">
                    <label for="cantidad">Seleccione la cantidad:</label>
                    <select name="cantidad" id="cantidad" class="cantidad-desp">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                    </select>
                    <div class="comprar">
                        <label for="comprar"></label>
                        <button type="submit" id="comprar">COMPRAR ¡YA!</button>
                    </div>
                    <div class="agregar-carrito">
                        <label for="carrito"></label>
                        <button type="submit" id="carrito">AGREGAR AL CARRITO</button>
                    </div>
                </form>
            <% } else { %>
                <form action="../../cartLogin" method="GET">
                    <label for="cantidad">Seleccione la cantidad:</label>
                    <select name="cantidad" id="cantidad" class="cantidad-desp">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                    </select>
                    <div class="comprar">
                        <label for="comprar"></label>
                        <button type="submit" id="comprar">COMPRAR ¡YA!</button>
                    </div>
                    <div class="agregar-carrito">
                        <label for="carrito"></label>
                        <button type="submit" id="carrito">AGREGAR AL CARRITO</button>
                    </div>
                </form>
            <% } %>

            <div class="envio">
                <a href=""><i class="fas fa-truck"></i>
                <p>Elige tu dirección de envío.</p></a>
            </div>
            <div class="devolucion">
                <i class="fas fa-box"></i>
                <p>Devolución gratis dentro de los 30 dias</p>
            </div>
            <% if (locals.isLogged && locals.usuarioLogueado.perfil == 'Administrador') { %>
            <form class="divBotonEditar" action="/products/edit/<%= product.id %>" method="GET">
                <a href="" class="aEditar"><button class="botonEditar">Editar Producto</button></a>  
            </form>
            <% } %>
        </div>
    </main>
    <article class="not-main">
        <div class="caracteristicas">
            <h4>Características del producto</h4>
            <p><%= product.descripcion %> </p>
        </div>
    </article> 

</body>
<%- include("partials/footer") %>
</html>
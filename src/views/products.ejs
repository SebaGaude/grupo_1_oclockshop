<!DOCTYPE html>
<html lang="en">

<%- include("partials/head") %>

<body class="body">
    
    <%- include("partials/header") %>
   

    <section>
        <h2 class="titulo-categ second"> PRODUCTOS </h2>
        <% if (locals.isLogged && locals.usuarioLogueado.perfil == 'administrador') { %>
        <form class="divBotonCrear" action="/products/create" method="GET">
            <a href="" class="aEditar"><button class="botonEditar">Crear Producto</button></a>  
        </form>
        <% } %>
        <div class="all-products">
            <% for( let i = 0; i< productos.length; i++ ) { %>
            
            
            <div class="articulos articles">          
                <div class="article-container" >    
                    <div class="img-container">
                        <a href="./products/detail/<%=productos[i].id  %> "><h3><%=productos[i].articulo%> </h3></a>
                        <img src="./img/<%=productos[i].imagen  %> " alt="">
                    </div>           
                    <div class="articulo-x">
                        <div class="icono-articulo">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                    </div>
                    <div class="sub-articilo-x">
                        <p class="precio-anterior"><%= productos[i].precio %> </p>
                        <p class="precio-oferta"><%= productos[i].precio %></p>
                    </div>
                </div>         
            </div>
            <% } %>
        </div>
    </section>

<%- include("partials/footer") %>

</html>
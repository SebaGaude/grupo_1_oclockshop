<!DOCTYPE html>
<html lang="en">

<%- include("partials/head") %>

<body id="body-login-register">

    <%- include("partials/header.ejs") %>
    
    <main class="main" id="main-login-register">
        
        <!-- Formulario de Registro-->
      
         <form action="../users/register" method="POST" class="form-login-register" enctype="multipart/form-data"> 
                
            <h1> 
                ¡Bienvenido a O'Clock Shop!
            </h1>

            <h2> 
                Registrate completando tus datos
            </h2>
            <ul id="error-nombre"></ul>      
            <div class="try">
                <input class="register-input" id="nombre" type="text" name="nombre" placeholder="Nombre" value="<%= locals.oldData ? oldData.nombre : null %>">
                <% if (locals.errors && errors.nombre) { %>
                    <div class="errorMsg">
                        <%= errors.nombre.msg %> 
                    </div>
                    <% } %>
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Error message</small>
            </div>
            </div>
            
            <div class="try">
                <input class="register-input" id="apellido" type="text" name="apellido" placeholder="Apellido" value="<%= locals.oldData ? oldData.apellido : null %>">
                <% if (locals.errors && errors.apellido) { %>
                    <div class="errorMsg">
                        <%= errors.apellido.msg %> 
                    </div>
                <% } %>
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Error message</small>
            </div>
            
            <div class="try"> 
                <input class="register-input" id="email" type="email" name="email" placeholder="Correo electrónico" value="<%= locals.oldData ? oldData.email : null %>">
                <% if (locals.errors && errors.email) { %>
                    <div class="errorMsg">
                        <%= errors.email.msg %> 
                    </div>
                <% } %>
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Erro message</small>
            </div>
           <div class="try">
               <!-- <label>Ingresá una foto</label> -->
                <input class="register-input" id="imagen" type="file" name="imagen">
                <% if (locals.errors && errors.imagen) { %>
                    <div class="errorMsg">
                        <%= errors.imagen.msg %> 
                    </div>
                <% } %>
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Erro message</small>
            </div>      
    
            <div class="try">
                <input class="register-input" id="contraseña" type="password" name="contraseña" placeholder="Contraseña">
                <% if (locals.errors && errors.contraseña) { %>
                    <div class="errorMsg">
                        <%= errors.contraseña.msg %> 
                    </div>
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <small>Erro message</small>
                <% } %>
                <i class="fas fa-check-circle"></i>
                <i class="fas fa-exclamation-circle"></i>
                <small>Erro message</small>
            </div> 
            
            <!-- <div class="try">
                <input type="password" name="confirmar" placeholder="Confirmar contraseña">
            </div>  -->
            
             <!-- Botón "enviar" -->
            <p id="msjError"></p>

            <button type="submit" class="boton-crear-cuenta" id="enviar">CREAR CUENTA</button>
            
            <!-- <div class="terminos-condiciones">
                <input class="register-input" type="checkbox" name="nombre" class="checkbox">
                <label>Al crear esta cuenta, acepto los <a href="/terminos" target="_blank"> Términos y Condiciones </a>  y la <a href="/privacidad" target="_blank"> Política de Privacidad </a> de la tienda.</label>
            </div> -->
                
        </form>

    </main>
    <script src="../../js/validateRegister.js"></script>
<%- include("partials/footer.ejs") %>
</html> 